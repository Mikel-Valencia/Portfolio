---
import '@fontsource-variable/onest';
import '../scss/bundle.scss'
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body>
	<div class="bg-gradient"></div>
	<Header />
	<slot />
</body>
</html>

<style lang="scss" is:global>
	:root {
		color-scheme: light dark;
		--clr-transparent: hsl(360, 100%, 100%, 0);
		--text-primary: hsl(0, 0%, 9%, 1);
		--text-secondary: hsl(0, 0%, 40%, 1);
		--text-highlight: hsl(48, 96%, 53%, 1);
		--bg-gradient: hsl(360, 100%, 100%, 1);
		--bg-secondary: hsl(220, 14%, 96%, 1);
		--clr-border: hsl(216, 12%, 84%, 1);
	}
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
	}
	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		min-height: 100svh;
		.bg-gradient {
			position: absolute;
			top: 0;
			z-index: -2;
			height: 100vh;
			height: 100svh;
			width: 100vw;
			background-image: radial-gradient(ellipse 80% 80% at 50% -20%, rgba(120, 119, 198, .3), hsla(0, 0%, 100%, 0));
			background-color: var(--bg-gradient);
		}
	}
	@media (prefers-color-scheme: dark) {
		:root {
			--text-primary: hsl(0, 0%, 93%, 1);
			--text-secondary: hsl(0, 0%, 63%, 1);
			// --text-highlight: ;
			--bg-gradient: hsl(0, 0%, 4%, 1);
		}
	}
</style>
