---
import '@fontsource-variable/onest';
import '../scss/bundle.scss'
import Blob from '../components/Blob.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	<meta name="color-scheme" content="dark light">
</head>
<body>
	<div class="bg-gradient"></div>
	<Blob />
	<div id="app-entry">
		<Header />
		<slot />
	</div>
</body>
</html>

<style lang="scss" is:global>
	:root {
		--clr-transparent: hsl(360, 100%, 100%, 0);
		--text-primary: hsl(0, 0%, 9%, 1);
		--text-secondary: hsl(0, 0%, 40%, 1);
		--text-highlight-primary: hsl(230, 99%, 49%, 1);
		--text-highlight-secondary: hsl(179, 96%, 50%, 1);
		--text-gradient: linear-gradient(
			90deg,
			hsl(230, 99%, 49%, 1),
			hsl(221, 83%, 53%, 1),
			hsl(217, 91%, 60%, 1),
			hsl(188, 86%, 53%, 1),
			hsl(187, 92%, 69%, 1)
		);
		--bg-gradient: hsl(360, 100%, 100%, 1);
		--bg-secondary: hsl(220, 14%, 96%, 1);
		--border-color: hsl(216, 12%, 84%, 1);
	}
	[data-theme="dark"] {
		--text-primary: hsl(0, 0%, 93%, 1);
		--text-secondary: hsl(218, 13%, 68%, 1);
		--text-highlight-primary: hsl(293, 69%, 49%, 1);
		--text-highlight-secondary: hsl(292, 84%, 61%, 1);
		--text-gradient: linear-gradient(
			90deg,
			hsl(293, 69%, 49%, 1),
			hsl(292, 84%, 61%, 1),
			hsl(292, 91%, 73%, 1),
			hsl(291, 93%, 83%, 1),
			hsl(288, 96%, 91%, 1)
		);
		--bg-gradient: hsl(254, 87%, 3%);
		--bg-secondary: hsl(220, 14%, 96%, 1);
		--border-color: hsl(0, 100%, 100%, .16);
	}
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
		@media (prefers-reduced-motion) {
			scroll-behavior: auto;
		}
	}
	body {
		display: flex;
		flex-direction: column;
		// overflow: hidden;
		.bg-gradient {
			position: fixed;
			top: 0;
			z-index: -2;
			height: 100vh;
			height: 100svh;
			width: 100vw;
			background-image: radial-gradient(ellipse 80% 80% at 50% -20%, rgba(120, 119, 198, .3), hsla(0, 0%, 100%, 0));
			background-color: var(--bg-gradient);
		}
	}
</style>
