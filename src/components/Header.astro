---
import ThemeToggle from "./ThemeToggle.astro"

const navItems = [
  {
    title: "Experience",
    label: "experience",
    url: "/#experience",
  },
  {
    title: "Projects",
    label: "projects",
    url: "/#projects",
  },
  {
    title: "About",
    label: "about",
    url: "/#about",
  },
  {
    title: "Contact",
    label: "contact",
    url: "mailto:mikel.valencia02@gmail.com",
  },
]
---

<header class="header">
  <nav class="navigation">
    {
      navItems.map((link) => (
        <a class="navigation__link" aria-label={link.label} href={link.url}>{link.title}</a>
      ))
    }
    <ThemeToggle />
  </nav>
</header>

<style lang="scss">
  .header {
    position: fixed;
    top: 0;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    margin-top: .5rem;
  };
  .navigation {
    display: flex;
    column-gap: 1rem;
    justify-content: center;
    align-items: center;
    padding: 0 .75rem;
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 500;
    border-radius: 9999px;
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
    &__link {
      display: block;
      position: relative;
      padding: .5rem;
      transition: all 150ms cubic-bezier(.4,0,.2,1);
      &:hover {
        color: var(--highlight-clr);
      }
    };
  };
  @keyframes nav-shadown {
    to {
      box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
      backdrop-filter: blur(8px);
    };
  };
</style>