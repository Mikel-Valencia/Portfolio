---
const { class: className, id } = Astro.props
---

<section id={id} data-section={id} class={`container ${className}`}>
  <slot />
</section>

<style lang="scss">
  .container {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    scroll-margin: 5rem;
    &__hero {
      padding-top: 4rem;
      padding-bottom: 4rem;
      @media (min-width: 768px) {
        padding-top: 9rem;
        padding-bottom: 9rem;
      }
    }
  }
  @media (min-width: 768px) {
    .container {
      max-width: 42rem;
    }
  }
  @media (min-width: 1024px) {
    .container {
      max-width: 56rem;
    }
  }
</style>